{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/**/*"
  ]
}
